<%layout("./layouts/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col-5 offset-3">
            <h1>Singup On Wanderlust</h1>

            <form action="/singup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" placeholder="Add your user name" id="username" type="text" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please choose proper username.</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">email</label>
                    <input name="email" placeholder="Add your email address" id="email" type="text" class="form-control" required>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" placeholder="Add your password" id="password" type="text" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                    <div class="invalid-feedback">Please choose proper password.</div>
                </div>
                <button class="btn btn-success">SingUp</button>
            </form>
        </div>
    </div>
</body>
